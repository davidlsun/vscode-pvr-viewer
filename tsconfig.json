{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "lib": [
            "ES2022"
        ],
        "outDir": "out",
        "rootDir": "src",
        // strict type-checking options
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        // additional checks
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/webview"
    ],
    "references": [
        {
            "path": "src/webview"
        }
    ]
}