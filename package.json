{
  "name": "pvr-viewer",
  "displayName": "PVR Viewer",
  "description": "Image preview for PVR texture files",
  "version": "0.1.2",
  "publisher": "davidsun",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidlsun/vscode-pvr-viewer"
  },
  "homepage": "https://github.com/davidlsun/vscode-pvr-viewer/blob/main/README.md",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "texture",
    "viewer",
    "pvr",
    "pvrtc",
    "astc",
    "dxt",
    "etc"
  ],
  "icon": "./icons/package.png",
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "pvr-viewer",
        "displayName": "Image Preview",
        "selector": [
          {
            "filenamePattern": "*.pvr"
          }
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "pvr-viewer",
        "label": "PVR Viewer",
        "path": "./icons/pvr-viewer-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --packages=external",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "sharp": "^0.32.6"
  }
}
