{
  "name": "pvr-viewer",
  "displayName": "PVR Viewer",
  "description": "Image preview for PVR texture files",
  "version": "0.2.3",
  "publisher": "davidsun",
  "author": "David Sun",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidlsun/vscode-pvr-viewer.git"
  },
  "homepage": "https://github.com/davidlsun/vscode-pvr-viewer#readme",
  "bugs": {
    "url": "https://github.com/davidlsun/vscode-pvr-viewer/issues"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "texture",
    "viewer",
    "preview",
    "image",
    "powervr",
    "pvr",
    "pvrtc",
    "astc",
    "dxt",
    "etc2",
    "opengl",
    "gles"
  ],
  "galleryBanner": {
    "color": "#bde0fc"
  },
  "icon": "./assets/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "pvr.view",
        "displayName": "Image Preview",
        "selector": [
          {
            "filenamePattern": "*.pvr"
          }
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "pvr-files",
        "label": "PVR Files",
        "path": "./assets/pvr-files-icon-theme.json"
      }
    ],
    "configuration": {
      "title": "PVR Viewer",
      "properties": {
        "pvrViewer.fitSmallImagesToWindow": {
          "type": "boolean",
          "default": false,
          "description": "Fit small images to window",
          "markdownDescription": "If the image is smaller than the panel, it will be scaled up to fill the panel."
        },
        "pvrViewer.fitLargeImagesToWindow": {
          "type": "boolean",
          "default": true,
          "description": "Fit large images to window",
          "markdownDescription": "If the image is too large to be shown without scrollbars, it will be scaled down to fit in the panel."
        },
        "pvrViewer.convertLinearToSrgbForDisplay": {
          "type": "boolean",
          "default": false,
          "description": "Convert Linear to sRGB for display",
          "markdownDescription": "sRGB sampling allows the Unity Editor to render Shaders in linear color space when Textures are in gamma color space. When you select to work in linear color space, the Editor defaults to using sRGB sampling. If your Textures are in linear color space, you need to work in linear color space and disable sRGB sampling for each Texture."
        }
      }
    },
    "menus": {
      "webview/context": [
        {
          "command": "pvrViewer.openSettings",
          "when": "webviewId == 'pvr.view' && webviewSection == 'main'"
        },
        {
          "command": "pvrViewer.showTextureInfo",
          "when": "webviewId == 'pvr.view' && webviewSection == 'canvas'"
        }
      ]
    },
    "commands": [
      {
        "command": "pvrViewer.openSettings",
        "title": "Settings",
        "category": "PVR Viewer"
      },
      {
        "command": "pvrViewer.showTextureInfo",
        "title": "Texture Info",
        "category": "PVR Viewer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "NODE_ENV=production node ./esbuild.mjs",
    "build": "node ./esbuild.mjs",
    "watch": "node ./esbuild.mjs --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@types/vscode-webview": "^1.57.4",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/codicons": "^0.0.35",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.3.1"
  }
}