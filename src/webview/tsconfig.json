{
    "compilerOptions": {
        "composite": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "../../out",
        "rootDir": ".",
        // strict type-checking options
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        // additional checks
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    }
}