{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "../../out",
        "rootDir": ".",
        // strict type-checking options
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        // additional checks
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    }
}